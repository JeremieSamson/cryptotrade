{% extends '::content.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <form action="{{ path("fos_user_security_check") }}" method="post" role="form">
                            <fieldset>
                                {% if csrf_token %}
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                {% endif %}

                                <div class="form-group {% if error %}has-error{% endif %}">
                                    {% if error %}<label class="control-label" for="username">{{ error.messageKey|trans(error.messageData, 'security') }}</label>{% endif %}
                                    <input class="form-control" placeholder="E-mail" type="text"  id="username" name="_username" value="{{ last_username }}" required="required" autofocus>
                                </div>
                                <div class="form-group {% if error %}has-error{% endif %}">
                                    {% if error %}<label class="control-label" for="password">{{ error.messageKey|trans(error.messageData, 'security') }}</label>{% endif %}
                                    <input class="form-control" placeholder="Password" type="password" value="" id="password" name="_password" required="required">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" value="Login" class="btn btn-lg btn-success btn-block">
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}